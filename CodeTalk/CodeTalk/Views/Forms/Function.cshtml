
@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Function Form</title>
</head>
<body>
    <div class="function">
        <div class="q">
        <p>Enter a method name: <input type="text" id="input1" placeholder="EX: MyMethod" oninput="methodName()"></p>
        <p>Enter a data type: <input type="text" id="input2" placeholder="EX: int/bool/string" oninput="methodName()"></p>
        <p>Enter a parameter name: <input type="text" id="input3" placeholder="EX: newInt" oninput="methodName()"></p>
        </div>

        <h2 class="resultCode">Your Code:</h2>
        <p id="codeTalkCode"></p>

        <script>
            function methodName() {
                var x = document.getElementById("input1").value;
                var y = document.getElementById("input2").value;
                var z = document.getElementById("input3").value;
                document.getElementById("codeTalkCode").innerHTML = "<br>public static void " + x + " (" + y + " " + z + ")<br>" + "<br>{<br><br>Method statements and arguments defined here<br><br>}";
            }
        </script>
    </div>
</body>
</html>
