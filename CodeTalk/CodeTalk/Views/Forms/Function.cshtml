
@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Function Form</title>
</head>
<body>
    <div class="function">
        <h2 class="codeInput"><strong>Code Details</strong></h2>
        <hr />
        <div class="mName">
            <input type="text" id="input1" placeholder="Method Name" name="method" oninput="methodName()" required>
        </div>
        <div class="dataTp">
             <input type="text" id="input2" placeholder="Data Type" name="dType" oninput="methodName()" required>
        </div>
        <div class="pName">
            <input type="text" id="input3" placeholder="Parameter Name" name="paramName" oninput="methodName()" required>
        </div>


            <h2 class="resultCode"><strong>Your Code</strong></h2>
            <hr />
            <p id="codeTalkCode"></p>

            <script>
                function methodName() {
                    var x = document.getElementById("input1").value;
                    var y = document.getElementById("input2").value;
                    var z = document.getElementById("input3").value;
                    document.getElementById("codeTalkCode").innerHTML = "<br>public static void " + x + " (" + y + " " + z + ")<br>" + "<br>{<br><br>Method statements and arguments defined here...<br><br>}";
                }
            </script>
            <button class="toResultButton" type="submit">Submit</button>
        </div>
</body>
</html>
