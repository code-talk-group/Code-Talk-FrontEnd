@model  CodeTalk.Models.ForLoop
@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>For Loop Form</title>
</head>
<body>
    <form method="post" asp-action="CreateForLoop" asp-controller="Forms" class="forLoop" asp-route-id="2">
        <h2 class="codeInput"><strong>Code Details</strong></h2>
        <hr />
        <div class="project">
            <input asp-for="CodeName" type="text" id="codeName" autocomplete="off"  placeholder="Project Name" oninput="methodName()" required>
        </div>
        <div class="mName">
            <input asp-for="MethodName" type="text" id="MethodName" autocomplete="off" placeholder="Method Name"  oninput="methodName()" required>
        </div>
        <div class="dataTp">
            <input asp-for="ArrayName" type="text" id="ArrayName" autocomplete="off" placeholder="Array Name"  oninput="methodName()" required>
        </div>

        <h2 id="projectName"></h2>
        <hr />
        <p id="codeTalkCode"></p>

        <script>
            function methodName() {
                var codeName = document.getElementById("codeName").value;
                var x = document.getElementById("MethodName").value;
                var y = document.getElementById("ArrayName").value;
                document.getElementById("projectName").innerHTML = codeName;
                document.getElementById("codeTalkCode").innerHTML = "<pre>public static int " + x + "( int[] " + y + ")</pre>" + "<pre><br><br>{<br><br>    int counter = 0;<br><br>    for (int i = 0; i < " + y + ".Length; i++)<br><br>    {<br><br>        counter++;<br><br>    }<br><br>    return counter;<br><br>}</pre>";
                var inputArr = [codeName, MethodName.value, ArrayName.value];
                var json = JSON.stringify(inputArr);
            }
        </script>
        <button class="toResultButton" type="submit">Submit</button>
    </form>
</body>
</html>
